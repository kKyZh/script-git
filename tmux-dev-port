#!/bin/bash

# -2 color; new-seesion one new window; split-window, h vertical, v horizontal; select-pane -t panel number; split 3 and vertically even
tmux -2 new-session \; send-keys C-l \; split-window -h \; select-pane -t 0 \; split-window -v \; send-keys C-l \; select-pane -t 2 \; send-keys C-l \; split-window -v \;
